<?xml version="1.0" encoding="UTF-8"?>
<root>
	<Task name="skimmer" type="VegaXmlPlotter" config="" nodePath="" />
	<Logger globalLogLevel="info" />

	<!-- List your data sources -->
	<!-- Can be files or trees, later access them by name -->
	<Data name="sample" url="/Users/danielbrandenburg/bnl/local/work/RooBarbPlotter/bin/sample_data.root" />


	<!-- Things out here apply to all plots unless overriden -->
	<Margins left="0.10" right="0.12" top="0.1" bottom="0.15" />
	<TLatex x="0.30" y="0.87" text="Dataset details here" size="0.03"/>

	<TCanvas width="1000" height="700" />

	<Plot>
		<Histo data="sample" name="h1" style="styles.TH1">
			<style logy="1" optstat="0" />
		</Histo>

		<Histo data="sample" name="h2" style="styles.TH1">
			<style draw="same" color="blue" fca="blue, 0.25" optstat="0"/>
		</Histo>

		<Legend title="Components">
			<Entry name="h1" title="gaussian" opt="lpe"/>
			<Entry name="h2" title="Landau" opt="lpe" />
			
			<Position x1="0.15" x2="0.35" y1="0.6" y2="0.8"/>
		</Legend>

		<TLine x1="-10" x2="10" y1="10" y2="10"/>

		<Export url="h1.png" />
	</Plot>

	<Color1>1100</Color1>
	<Color2>@Color1</Color2>


	<Canvas n_coll="" n_row="1">
		
		<Pad gx="0, 6" gy="0, 6" m="0.05" name="1" > 
			<!-- <Axes lsx="-50, 50, 500" lsy="1, 1e4, 100" optstat="0" axisdigits="2"/> -->

			<Histo name="sample/h1" style="styles.TH1">
				<style logy="1" draw="same" optstat="0" linecolor="#000000"/>
			</Histo>

			<Histo data="sample" name="h2" style="styles.TH1">
				<style draw="same" color="blue" fca="blue, 0.25" optstat="0" />
			</Histo>

			<Legend>
				<Entry name="h1" title="gaussian" opt="lpe"/>
				<Entry name="h2" title="Landau" opt="lpe" />
				
				<Position x1="0.15" x2="0.35" y1="0.6" y2="0.8"/>
			</Legend>

			<TLine x1="-10" x2="10" y1="10" y2="10"/>
			<Export url="pad_1e.pdf" />
		</Pad>
		
		<!-- <Pad gx="0, 6" gy="3, 4" m="0" name="2"/> 
		<Pad gx="6, 9" gy="3, 6" m="0" name="3"/> 
		<Pad gx="3, 6" gy="0, 3" m="0" name="4"/>  -->
		<Export url="h1Can.pdf" />
	</Canvas>


	<styles>
		<TH1 title="basic TH1 style; X [units]; Y [units]" color="red" optstat="0"/>
	</styles>


</root>